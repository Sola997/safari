<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:maxHeight="50sp"
        android:maxWidth="50sp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </ImageView>
    <TextView
        android:textSize="20sp"
        android:paddingTop="30sp"
        android:text="Product name:"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/dialog_biding_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:paddingTop="30sp"
        android:textSize="20sp"
        android:text="Starting price of this product:"
        android:layout_gravity="center"
        android:id="@+id/dialog_biding_starting_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:paddingTop="30sp"
        android:layout_gravity="center"
        android:text="Current highest price:"
        android:textSize="20sp"
        android:id="@+id/dialog_biding_current_highest_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <EditText
        android:layout_gravity="center"
        android:paddingTop="30sp"
        android:layout_marginRight="50sp"
        android:layout_marginLeft="50sp"
        android:textSize="15sp"
        android:id="@+id/dialog_biding_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number">
    </EditText>




</LinearLayout>